<com.tglt.sagittarius.icons.CustomizeIconsPreview xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/icon_preview"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_osmand"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_osmand" />

            <TextView
                android:id="@+id/item_name"
                style="@style/BaseIcon.Workspace.Shadows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preview_app_osmand"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_newpipe"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_newpipe" />

            <TextView
                android:id="@+id/item_youtube"
                style="@style/BaseIcon.Workspace.Shadows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preview_app_newpipe"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_launcher"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="10dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/item_instagram"
                style="@style/BaseIcon.Workspace.Shadows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/derived_app_name"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_signal"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_signal" />

            <TextView
                android:id="@+id/item_ws"
                style="@style/BaseIcon.Workspace.Shadows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preview_app_signal"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</com.tglt.sagittarius.icons.CustomizeIconsPreview>